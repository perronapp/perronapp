      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-45940484-1', 'perronapp.co');
      ga('send', 'pageview');
  %body
    #top-right-banner.scroll-fade
    #main-container
      = yield
    .container
      = image_tag('hueso.png', id: 'hueso-icon', class: 'bottom-icon scroll-fade')
      = image_tag('reja.png', id: 'reja-icon', class: 'bottom-icon scroll-fade')
      = image_tag('hydrant.png', id: 'hydrant-icon', class: 'bottom-icon scroll-fade')