- if current_user
  %h1 Mis Canes
  %ul#my-dogs
  - current_user.dogs.each do |dog|
    %li
      = link_to dog.name, dog_path(dog)

  %br
  = link_to 'Registrar nuevo perro', new_dog_path
- else
  #login-container
    .login-form
      = form_tag user_session_path do
        = text_field_tag 'user[email]', nil, placeholder: 'email'
        %br
        = password_field_tag 'user[password]', nil, placeholder: 'password'
        %br
        = check_box_tag 'user[remember_me]'
        = label_tag 'user[remember_me]', 'Remember me'
        %br
        %button Sign in
        %br
        = link_to "Forgot your password?", new_password_path('user')
