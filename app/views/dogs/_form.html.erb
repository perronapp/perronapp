<div id='new-dog-wrapper'>
  <%= form_for(@dog) do |f| %>
    <div class="field" id='dog-avatar-wrapper'>
      <%= image_tag(@dog.avatar_url) if @dog.avatar? %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>

    <div class="actions">
      <%= f.submit 'Agregar', class: 'btn-green' %>
      <%= link_to 'Back', dogs_path, class: 'btn-orange' %>
    </div>

    <% if @dog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@dog.errors.count, "error") %> prohibited this dog from being saved:</h2>

        <ul>
        <% @dog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :name, placeholder: 'nombre' %>
    </div>
    <div class="field">
      <%= f.text_field :race, placeholder: 'raza' %>
    </div>
    <div class="field">
      <%= f.number_field :weight, placeholder: 'peso' %>
    </div>
    <div class="field">
      <%= select_date Time.now, start_year: (Time.now.year - 100), end_year: Time.now.year  %>
    </div>
    <div class="field">
      <%= f.text_field :sex, placeholder: 'sexo' %>
    </div>
    <div class="field">
      <%= f.text_field :color, placeholder: 'color' %>
    </div>
  <% end %>
</div>
